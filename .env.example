# PixlHub Environment Variables
# Copy this file to .env and update the values

# Database Configuration
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Using Docker PostgreSQL (from docker-compose.yml)
DATABASE_URL="postgresql://pixlhub:pixlhub_password@localhost:5432/pixlhub"

# MinIO Configuration (S3-compatible object storage)
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_USE_SSL="false"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="pixlhub-assets"
MINIO_PUBLIC_URL="http://localhost:9000"

# AI Configuration (Optional - not required for basic functionality)
# HUGGINGFACE_API_TOKEN="your_token_here"
# REPLICATE_API_TOKEN="your_token_here"
